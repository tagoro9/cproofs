<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/amethyst"
    android:weightSum="20"
    tools:context="${packageName}.${activityClass}">

    <ImageView
        android:id="@+id/result_image"
        android:src="@drawable/check"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/result_img_margin_top"
        android:paddingLeft="@dimen/result_img_padding"
        android:paddingRight="@dimen/result_img_padding"
        android:layout_weight="10"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/result_message"
        android:text="@string/hello_world"
        android:textColor="@color/lightviolet"
        android:gravity="center"
        android:layout_weight="5"
        android:textSize="@dimen/result_text_size"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
