<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/main_fragment"
    tools:context="com.scytl.cproofs.activity.MainActivity$PlaceholderFragment">

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/text_choice_placeholder"
                android:drawableLeft="@drawable/tag"
                android:drawablePadding="10dp"
                android:id="@+id/choice_text"
                android:layout_weight="2"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/validate_button_text"
                android:enabled="false"
                android:id="@+id/validate_button"
                android:layout_weight="1"/>

        </LinearLayout>


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/file_text"/>

            <RelativeLayout android:id="@+id/no_file_layout"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="2"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/image"
                    android:alpha="0.5"
                    android:src="@drawable/info"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginTop="3dp"
                    android:layout_below="@+id/image"
                    android:textAlignment="center"
                    android:alpha="0.5"
                    android:text="@string/no_file_text"/>
            </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
